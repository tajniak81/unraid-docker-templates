<?xml version="1.0"?>
<Container version="2">
  <Name>dockhand</Name>
  <Repository>fnsys/dockhand:latest</Repository>
  <Registry>https://github.com/Finsys/dockhand</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/Finsys/dockhand</Support>
  <Project>https://github.com/Finsys/dockhand</Project>
  <Overview>Modern Docker management for everyone.&#13;
    A powerful, intuitive Docker platform. Free for homelabs, ready for enterprise.&#13;
    SQLite by default, zero telemetry, free forever. Self-host everything without the complexity.&#13;
    https://dockhand.pro/&#13;
    https://dockhand.pro/manual/#introduction&#13;
    https://github.com/Finsys/dockhand&#13;

</Overview>
  <Category>Network:Management</Category>
  <WebUI>http://[IP]:[PORT:3000]/</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/tajniak81/unraid-docker-templates/refs/heads/main/dockhand/dockhand.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/tajniak81/unraid-docker-templates/refs/heads/main/dockhand/icon/dockhand.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled></DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Requires/>

  <!-- Port mappings -->
  <Config Name="WebUI Port" Target="3000" Default="3000" Mode="tcp" Description="Dockhand WebUI" Type="Port" Display="always" Required="true" Mask="false">3000</Config>

  <!-- Volume / path mappings -->
  <Config Name="AppData" Target="/app/data" Default="/mnt/user/appdata/dockhand" Mode="rw" Description="Persistent data folder" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/dockhand</Config>
  <Config Name="Docker Socket" Target="/var/run/docker.sock" Default="/var/run/docker.sock" Mode="rw" Description="Docker socket (required)" Type="Path" Display="always" Required="true" Mask="false">/var/run/docker.sock</Config>
</Container>
